{% style %}

{% endstyle %}

<div class="container">
  <div class="feature-card_wrapper">
    {% for block in section.blocks %}
      <div class="feature-card_items">
        <div class="feature-card_items-img">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '80x' }}" alt="{{ block.settings.title | escape }}">
          {% endif %}
        </div>
        <div class="feature-card_items-text">
          <h3 class="title-feature">{{ block.settings.title }}</h3>
          <p class="dsc-feature">{{ block.settings.description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Feature",
  "tag": "section",
  "class": "feature",
  "settings": [],
  "blocks": [
    {
      "type": "feature_item",
      "name": "Feature Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Feature Section",
      "blocks": [
        { "type": "feature_item" },
        { "type": "feature_item" },
        { "type": "feature_item" },
        { "type": "feature_item" }
      ]
    }
  ]
}
{% endschema %}

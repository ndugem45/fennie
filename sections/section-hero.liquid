<video autoplay muted loop playsinline>
  <source src="{{ 'hero-video.mp4' | asset_url }}" type="video/mp4">
  Your browser does not support the video tag.
</video>
<div id="hero" class="container">
  <div class="content">
    <span class="label scroll-animate" data-delay="0">{{ section.settings.label }}</span>
    <h1 class="scroll-animate" data-delay="100">{{ section.settings.title }}</h1>
    <div class="desc scroll-animate" data-delay="200">
      {{ section.settings.desc }}
    </div>
  </div>
  {% if section.settings.enable_cta %}
    <a href="{{ section.settings.cta_url }}" class="btn --outline">
      <span> {{ section.settings.cta_title }} </span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M20.7806 12.5307L14.0306 19.2807C13.8899 19.4214 13.699 19.5005 13.5 19.5005C13.301 19.5005 13.1101 19.4214 12.9694 19.2807C12.8286 19.1399 12.7496 18.9491 12.7496 18.7501C12.7496 18.551 12.8286 18.3602 12.9694 18.2194L18.4397 12.7501H3.75C3.55109 12.7501 3.36032 12.671 3.21967 12.5304C3.07902 12.3897 3 12.199 3 12.0001C3 11.8011 3.07902 11.6104 3.21967 11.4697C3.36032 11.3291 3.55109 11.2501 3.75 11.2501H18.4397L12.9694 5.78068C12.8286 5.63995 12.7496 5.44907 12.7496 5.25005C12.7496 5.05103 12.8286 4.86016 12.9694 4.71943C13.1101 4.5787 13.301 4.49963 13.5 4.49963C13.699 4.49963 13.8899 4.5787 14.0306 4.71943L20.7806 11.4694C20.8504 11.5391 20.9057 11.6218 20.9434 11.7128C20.9812 11.8039 21.0006 11.9015 21.0006 12.0001C21.0006 12.0986 20.9812 12.1962 20.9434 12.2873C20.9057 12.3783 20.8504 12.461 20.7806 12.5307Z"
          fill="currentColor" />
      </svg>
    </a>
  {% endif %}
</div>

{% if section.settings.enable_slider %}
  <div class="container second">
      <div class="slideLabel">
        As seen in:
      </div>
      <div class="slider" style="width: 100%;">
        {% for item in section.settings.metafields %}
          <img src="{{ item.asset | img_url }}" height="80" alt="{{ item.title }}">
        {% endfor %}
      </div>
  </div>
{% endif %}


  {% comment %} <div class="running">
    {% for a in (1..4) %}
      <div class="group">
        <div style="flex-shrink: 0;">
          New bone china
        </div>
        <div style="flex-shrink: 0;">
          Dedicated section
        </div>
        <div style="flex-shrink: 0;">
          Dishwasher safe
        </div>
        <div style="flex-shrink: 0;">
          Microwave friendly
        </div>
        <div style="flex-shrink: 0;">
          Vegan and animal-free
        </div>
        <div style="flex-shrink: 0;">
          Distinctive craft and design
        </div>
      </div>
    {% endfor %}
  </div> {% endcomment %}

<script>
  $(document).ready(function(){
    $('#shopify-section-{{section.id}} .slider').slick({
      centerMode: true,
      variableWidth: true,
      arrows: false,
      dots: false,
      infinite: true,
      autoplay: true,
      autoplaySpeed: 0,
      speed: 4000,
      pauseOnHover: false,
      pauseOnFocus: false,
      cssEase: 'linear'
    });
  });
</script>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "hero",
  "settings": [
    {
      "type": "header",
      "content": "Label"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Section label",
      "default": "A TRIBUTE TO WHERE WE COME FROM"
    },
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Section title",
      "default": "A custom plate crafted for the way we eat",
      "info": "Wrap alternate font with <span>"
    },
    {
      "type": "header",
      "content": "Description"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Section description",
      "default": "<p>Preserving texture, protecting flavour and honouring culture</p>"
    },
    {
      "type": "header",
      "content": "CTA Button"
    },
    {
      "type": "checkbox",
      "id": "enable_cta",
      "label": "Enable CTA",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_title",
      "label": "Section CTA title",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Section CTA URL",
    },
    {
      "type": "header",
      "content": "Slider"
    },
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "Enable logo slider",
      "default": true
    },
    {
      "type": "metaobject_list",
      "metaobject_type": "running_logo",
      "id": "metafields",
      "limit": 5,
      "label": "Section logo",
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
    }
  ]
}
{% endschema %}

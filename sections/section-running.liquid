
<div class="container --full">
    <div class="slider" style="width: 100%;">
      {% for item in section.settings.metafields %}
        <img src="{{ item.asset | img_url }}" height="80" alt="{{ item.title }}">
      {% endfor %}
    </div>
</div>

<script>
  $(document).ready(function(){
    $('#shopify-section-{{section.id}} .slider').slick({
      centerMode: true,
      variableWidth: true,
      arrows: false,
      dots: false,
      infinite: true,
      autoplay: true,
      autoplaySpeed: 2000,
    });
  });
</script>

{% schema %}
{
  "name": "Running",
  "tag": "section",
  "class": "running",
  "settings": [
    {
      "type": "header",
      "content": "Slider"
    },
    {
      "type": "metaobject_list",
      "metaobject_type": "running_logo",
      "id": "metafields",
      "limit": 5,
      "label": "Section logo",
    }
  ],
  "presets": [
    {
      "name": "Running Section",
    }
  ]
}
{% endschema %}
